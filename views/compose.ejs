
<%- include('partials/header') -%>

<h1>Compose</h1>
<form action="/compose" method="POST">
    <div class="form-group">
        <label>Title</label>
        <input id="title" class="form-control" type="text" name="postTitle">
        <label>Post</label>
        <textarea id="post" class="form-control" name="postBody" id="" cols="30" rows="5"></textarea>
    </div>
    <button class="btn btn-lg btn-primary" type="submit" name="submit">Publish</button>    
</form>

